<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid_tracker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Covid_tracker"
        android:name=".NotificationChannelsEnabler">

        <activity
            android:name=".Administrator.Activity.PlanAndShedVaccs"
            android:exported="true" />
        <activity
            android:name=".Administrator.Activity.UpcomingAppointments"
            android:exported="true" />
        <activity
            android:name=".Administrator.Activity.AdminDashboard"
            android:exported="true" />
        <activity
            android:name=".User.Activity.Dashboard"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity

            android:name=".User.Activity.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".User.Activity.BookingActivity"
            android:exported="true" />
        <activity
            android:name=".Administrator.Activity.Administartorlogin"
            android:exported="true" />
        <activity
            android:name=".User.Activity.Regristering"
            android:exported="true" />
        <activity
            android:name=".User.Activity.StatisticsVacc"
            android:exported="true" />
        <activity
            android:name=".User.Activity.StatisticsCovid"
            android:exported="true" />
        <activity android:name=".Administrator.Activity.HandlePerson" />
    </application>

</manifest>