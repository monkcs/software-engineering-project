<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/confirmAppointment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/greencheckmark"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/displayusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirmAppointment"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/displaydateofbirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/displayusername"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>