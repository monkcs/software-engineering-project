<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/greeding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="welcome"
            android:textColor="@color/black"
            android:textSize="26dp" />



        <Button
            android:id="@+id/BtnBook"
            android:layout_below="@id/greeding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boka"
            android:textColor="@color/black" />

        <Button
            android:layout_below="@id/BtnBook"
            android:id="@+id/BtnRebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Omboka"
            android:textColor="@color/black" />

        <Button
            android:layout_below="@id/BtnRebook"
            android:id="@+id/BtnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avboka"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/aktuell"
            android:layout_below="@id/BtnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Aktuell tid:"
            android:textColor="@color/black"
            android:textSize="26dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_bokis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/aktuell"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

            />


            </RelativeLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
