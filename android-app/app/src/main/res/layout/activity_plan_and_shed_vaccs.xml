<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanAndShedVaccs"
    tools:ignore="ExtraText">
    <Spinner
        android:id="@+id/age_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/start_date_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/age_spinner"
        tools:layout_editor_absoluteX="38dp" />

    <TextView
        android:id="@+id/pasv_infotext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="state minium age for booking start date"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/age_spinner"
        tools:layout_editor_absoluteX="28dp" />

    <Button
        android:id="@+id/genrate_time_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="60dp"
        android:text="make time avaliable for age group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_date_spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>